<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="667dp"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/profileTXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PROFILE"
            android:textColor="@color/background"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/background"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/profile_shape"/>

        <ImageView
            android:id="@+id/photoProfile"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignTop="@id/background"
            android:layout_marginTop="20dp"
            app:srcCompat="@android:mipmap/sym_def_app_icon" />

        <TextView
            android:id="@+id/userNameTXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/background"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:text="Username"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userEmailTXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/background"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:text="email"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/editImage"
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:layout_alignTop="@id/background"
            android:layout_alignRight="@id/background"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@mipmap/edit"
            android:background="@mipmap/edit"/>

        <Button
            android:id="@+id/button"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_below="@+id/background"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/profile_shape"
            android:padding="15dp"
            android:drawableStart="@mipmap/google"
            android:text="                       Opcion 1"
            android:textColor="@color/black"
            android:textAlignment="viewStart"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/profile_shape"
            android:padding="15dp"
            android:drawableStart="@mipmap/google"
            android:text="                       Opcion 2"
            android:textColor="@color/black"
            android:textAlignment="viewStart"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/profile_shape"
            android:padding="15dp"
            android:drawableStart="@mipmap/google"
            android:text="                       Opcion 3"
            android:textColor="@color/black"
            android:textAlignment="viewStart"/>

        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/profile_shape"
            android:padding="15dp"
            android:drawableStart="@mipmap/google"
            android:text="                         Logout"
            android:textColor="@color/black"
            android:textAlignment="viewStart"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>